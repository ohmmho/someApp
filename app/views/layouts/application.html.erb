								<li><%= link_to 'Entra', new_user_session_path %></li>
							</ul>
						<% end -%>
	        </nav>
	      </div>
	    </div>
	    <div class="navbar-inner submenu"> 
	    	<div id="subnavbar">
				<ul id="subnav">

				<li><a href="/categories/1" title="Mockups">Mock-ups<img src="/assets/1.png" /></a>
